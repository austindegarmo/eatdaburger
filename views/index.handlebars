<h1>burger!</h1>

<h2>burger that are not sleepy!</h2>

<ul>
  {{#each burger}}
    {{#unless this.eaten}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=DELETE" method="POST">
          <input type="hidden" name="eaten" value="true">
          <button type="submit">SLEEP TIME!</button>
        </form>

        {{> burger/delete-cat}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>burger that are eaten!</h2>

<ul>
  {{#each burger}}
    {{#if this.eaten}}
      <li>
        {{this.name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="eaten" value="false">
          <button type="submit">WAKE UP!</button>
        </form>

        {{> burger/delete-cat}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="ca">Hamberguesa:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="slee">eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> eaten!<br>
    <input type="radio" name="eaten" value="0"> Awake
  </div>

  <button type="submit">Add Burger</button>
</form>
